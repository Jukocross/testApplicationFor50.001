<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz_Activity"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/quizTitle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Title"
        android:textSize="50sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/quizScore_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Score: 0/10"
        android:textSize="20sp"/>
    <TextView
        android:id='@+id/quizDescription_id'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desciprtion"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewQuestion_id"
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_height="250dp">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addQuestionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Question"
            android:clickable="true"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/deleteQuestionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Question"
            android:clickable="true"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/deleteQuizButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Quiz"
        android:clickable="true"
        android:layout_margin="5dp"/>
</LinearLayout>